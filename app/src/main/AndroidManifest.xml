<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smubator.adwitter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".volly.DwitterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SignInAcitivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".VerificationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Promoter.activity.AccountSettingActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Promoter.activity.CampaignDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Promoter.activity.SchedulingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Promoter.activity.SelectLocationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".IntroductionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ModeSelectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Promoter.activity.PromoterAccountActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Promoter.activity.PromoterSchedulingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Promoter.activity.TrackOrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Promoter.activity.GraphActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Promoter.activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Promoter.activity.MaxPostQuantity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Promoter.activity.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>