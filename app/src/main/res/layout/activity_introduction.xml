<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/intro_background" />

    <ImageView
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/intro_logo_dwitter" />

    <com.smubator.adwitter.CustomFonts.MyCustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvMakeBusiness"
        android:layout_marginBottom="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_35sdp"
        android:gravity="start|left"
        android:text="@string/welcomeToDwitter"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_30ssp"
        android:textStyle="bold" />

    <com.smubator.adwitter.CustomFonts.MyCustomTextView
        android:id="@+id/tvMakeBusiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/_45sdp"
        android:layout_marginLeft="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_35sdp"
        android:text="@string/introText"
        android:textAllCaps="true"
        android:textSize="@dimen/_9ssp" />

    <ImageView
        android:id="@+id/ivArrowRight"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:src="@drawable/btn_intro_right_arrow" />

</RelativeLayout>